{{!-- 帳密正確 --}}
{{#if userName}}
<div class="container p-3">
  <h1 class="fw-bold m-3">Welcome back, {{userName}}!</h1>
</div>

{{else}}
<form action="/" method="POST">
  <div class="container">
    <div class="container-item d-flex flex-column gap-3 align-items-center" style="margin:100px;">
      <h1>Account Login</h1>
      <input type="text" class="border-dark" style="width:300px;height:48px;" placeholder=" Email" name="email">
      <input type="text" class="border-dark" style="width:300px;height:48px;" placeholder=" Password" name="password">
      <button class="btn border-dark border-2 fw-bolder"
        style="border-radius:10px;width:110px;height:46px;font-size:16px;box-shadow:0px 3px 5px rgba(151, 151, 151, 0.7);"
        type=" submit">Sign in</button>
    </div>
  </div>
</form>

{{/if}}

{{!-- 帳密錯誤 --}}
{{#if data}}
<script>
  alert(" Username 或 Password 錯誤")
</script>

{{/if}}